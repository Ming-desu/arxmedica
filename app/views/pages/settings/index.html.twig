{% extends "/layouts/main.html.twig" %}

{% block title %}
  Settings
{% endblock %}

{% block main %}
  <div class="container">
    <h1 class="h2">System Settings</h1>
    <p class="text-muted">Fill up all the required fields.</p>

    <div class="row">
      <div class="col-md-6 col-lg-7 mb-4">
        <div class="card card-company">
          <img 
            src="/img/logo-banner.png"
            class="card-img-top"
            alt="Arxmedica Marketing Logo"
            height="150"
            style="object-fit: contain;"
          >
          <div class="dropdown-divider"></div>
          <div class="card-body">
            <div id="company-info" class="company collapse show px-md-2">
              <h4>Arxmedica Marketing</h4>
              <p class="card-text d-flex align-items-center">
                <i class="las la-phone la-1x mr-1"></i>
                <span>+6390001748</span>
              </p>
              <p class="card-text m-0">
                <small class="text-muted">
                  â€” NO. 78 F. LAURENA STREET POBLACIONBRGY. I, TANAUAN CITY, BATANGAS 4232
                </small>
              </p>
            </div>
            <a 
              href="#" 
              class="btn btn-light btn-toggle text-primary"
              role="button"
              data-toggle="collapse"
              data-target=".company"
              aria-controls="company-info company-form"
              onclick="toggleText(this, 'Edit Details')"
            >
              Edit Details
            </a>
            <form action="" id="company-form" class="company collapse px-md-2">
              <div class="card-title">
                <h5 class="m-0">Company Information</h5>
                <p class="card-text">
                  <small class="text-muted">Provide necessary information of the company.</small>
                </p>
              </div>
              <div class="mb-2">
                <label for="company_banner" class="form-label">Company Banner</label>
                <div class="form-file">
                  <input type="file" class="form-file-input" id="company_banner">
                  <label class="form-file-label" for="company_banner">
                    <span class="form-file-text">Upload image...</span>
                    <span class="form-file-button">Browse</span>
                  </label>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6 mb-2">
                  <label for="company_name" class="form-label">Company name</label>
                  <input type="text" id="company_name" class="form-control" placeholder="Microgoogle Corporation">
                </div>
                <div class="col-lg-4 mb-2">
                  <label for="company_telephone" class="form-label">Contact number</label>
                  <input type="text" id="company_telephone" class="form-control" placeholder="0961-xxxx-xxx">
                </div>
              </div>
              <div class="mb-2">
                <label for="company_address_details" class="form-label">Address details</label>
                <input type="text" id="company_address_details" class="form-control" placeholder="#12 Bago St. San Isidro">
              </div>
              <div class="row">
                <div class="col-lg-6 mb-2">
                  <label for="company_municipality" class="form-label">Municipality/City</label>
                  <input type="text" id="company_municipality" class="form-control" placeholder="Balintawak">
                </div>
                <div class="col-lg-6 mb-2">
                  <label for="company_province" class="form-label">Province</label>
                  <input type="text" id="company_province" class="form-control" placeholder="Quezon">
                </div>
              </div>
              <div class="text-right mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block script %}
  <script src="/js/helpers/base.js"></script>
{% endblock %}